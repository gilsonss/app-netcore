@using X.PagedList.Mvc.Core;

@model X.PagedList.IPagedList<OracleBpm.Features.Domain.Entities.EntityRole>


@{
    ViewData["Title"] = "Index";
}

<partial name="~/Views/Shared/Templates/_BotoesDefault.cshtml" />

<table class="table table-bordered border-bottom">
    <thead>
        <tr>
            <td>Codigo</td>
            <td>Nome</td>
            <td>Descricao</td>
            <td>Data Cadastro</td>
            <td colspan="2"></td>
            
        </tr>
    </thead>
    @foreach (var item in Model)
    {

        <tbody>
            <tr>
                <td>@item.CodigoRole</td>
                <td>@item.CodigoUsuario</td>
                <td>@item.DescricaoRole</td>
                <td>@item.DataCadastroRole</td>
                <td class="btn-secondary btn-block text-center ">Editar</td>
                <td class="btn-warning btn-danger text-center ">Excluir</td>             
            </tr>
        </tbody>
    }

</table>

<partial name="~/Views/Shared/Templates/_SearchDefault.cshtml" />

<div class="mt-3">

    <div style="float: right">

        <div>

        </div>
        <p class="text-info"> Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount </p>
    </div>
    <div class="justify-content-center">
            @Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina = pagina }),
           new X.PagedList.Web.Common.PagedListRenderOptionsBase { LiElementClasses = new List<string> { "pagination","page-link"} })
    </div>  
</div>











